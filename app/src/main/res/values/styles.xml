<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textViewStyle">@font/quicksand_medium</item>
        <item name="fontFamily">@font/quicksand_medium</item>

        <item name="android:colorBackground">@color/colorBackground</item>

        <item name="materialButtonStyle">@style/buttonDefault</item>
        <item name="materialButtonOutlinedStyle">@style/outlineButtonDefault</item>




    </style>

    <style name="buttonDefault" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorSalmao</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="outlineButtonDefault" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/purple_700</item>
        <item name="strokeWidth">3dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>




</resources>